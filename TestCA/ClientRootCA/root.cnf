dir				= .					# Where everything is kept

[ ca ]
default_ca		= CA_default		# The default ca section

[ CA_default ]
certs			= $dir/Certs		# Where the issued certs are kept
crl_dir			= $dir/Crl		# Where the issued crl are kept
database		= $dir/index.txt	# database index file.
new_certs_dir	= $dir/Certs		# default place for new certs.
serial			= $dir/serial 		# The current serial number
certificate		= $dir/ClientRootCA.pem 	# The CA certificate
private_key		= $dir/ClientRootKey.pem
x509_extensions	= ca_ext		# The extentions to add to the cert

default_days	= 750			# how long to certify for
default_crl_days= 30			# how long before next CRL
default_md		= sha1			# which md to use.
#policy			= ca_policy


[ ca_policy ]
commonName				=	ASHOKE-97-CA
stateOrProvinceName		=	KA
countryName				=	IN
emailAddress			=	ashoke-97-ca@myca.com
organizationName		=	CITRIX


[ req ]
default_bits			=	2048
default_keyfile			=	$dir/test_ca_key.pem
x509_extensions			=	ca_ext
distinguished_name		=	ca_distinguished_name


[ ca_ext ]
basicConstraints		= CA:true
subjectKeyIdentifier	= hash


[ ca_distinguished_name ]
commonName				=	ClientRootCA
stateOrProvinceName		=	KA
countryName				=	IN
emailAddress			=	ClientRootCA@testca.com
organizationName		=	CITRIX
